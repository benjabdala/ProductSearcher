<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GeneralTextStyle">
        <item name="android:fontFamily">sans-serif-light"</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SearchInputButtonSearchStyle" parent="GeneralTextStyle">
        <item name="android:layout_marginTop">@dimen/search_input_margin_top_50</item>
        <item name="android:background">@drawable/search_button_background</item>
        <item name="android:textSize">@dimen/search_input_btn_search_text_size</item>
    </style>

    <style name="SearchInputEditTextStyle" parent="GeneralTextStyle">
        <item name="android:layout_marginEnd">@dimen/search_input_et_product_margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/search_input_et_product_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/search_input_margin_top_50</item>
        <item name="android:padding">@dimen/search_input_et_product_padding</item>
        <item name="android:textSize">@dimen/search_input_et_product_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:hint">@string/search_input_et_hint</item>
        <item name="android:background">@color/color_yellow_primary</item>
    </style>

    <style name="ProductsFoundTitleStyle" parent="GeneralTextStyle">
        <item name="android:textSize">@dimen/text_view_text_size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/color_yellow_primary</item>
        <item name="android:padding">@dimen/products_found_title_padding</item>
    </style>

    <style name="ProductCardViewTitle" parent="GeneralTextStyle">
        <item name="android:padding">@dimen/product_card_view_title_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/product_card_view_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/color_dark_grey</item>
    </style>

</resources>

